    <script>
        // Product prices
        const productPrices = {
            'Smartphone AI Pro': 12500000,
            'Gaming Laptop Ultra': 25000000,
            'Wireless Headphone Pro': 3500000,
            'Smart TV OLED 65 inch': 18000000,
            'Smartwatch Health Pro': 5500000,
            'Mirrorless Camera 4K': 22000000
        };

        // Slide system variables
        let currentSlide = 0;
        const totalSlides = 6;

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            updateProgressBar();
            updateNavigation();
            
            // Event listeners
            document.getElementById('product').addEventListener('change', updateTotalPrice);
            document.getElementById('quantity').addEventListener('input', updateTotalPrice);
            document.getElementById('orderForm').addEventListener('submit', handleOrderSubmit);
            
            // Keyboard navigation
            document.addEventListener('keydown', function(e) {
                if (e.key === 'ArrowRight') {
                    e.preventDefault();
                    nextSlide();
                } else if (e.key === 'ArrowLeft') {
                    e.preventDefault();
                    previousSlide();
                }
            });
        });

        // Navigation functions
        function goToSlide(slideIndex) {
            if (slideIndex >= 0 && slideIndex < totalSlides) {
                currentSlide = slideIndex;
                updateSlideDisplay();
                updateProgressBar();
                updateNavigation();
            }
        }

        function nextSlide() {
            if (currentSlide < totalSlides - 1) {
                currentSlide++;
                updateSlideDisplay();
                updateProgressBar();
                updateNavigation();
            }
        }

        function previousSlide() {
            if (currentSlide > 0) {
                currentSlide--;
                updateSlideDisplay();
                updateProgressBar();
                updateNavigation();
            }
        }

        function updateSlideDisplay() {
            const slides = document.querySelectorAll('.slide');
            slides.forEach((slide, index) => {
                slide.classList.remove('active', 'prev');
                if (index === currentSlide) {
                    slide.classList.add('active');
                } else if (index < currentSlide) {
                    slide.classList.add('prev');
                }
            });
        }

        function updateProgressBar() {
            const progressFill = document.getElementById('progressFill');
            const progress = ((currentSlide + 1) / totalSlides) * 100;
            progressFill.style.width = progress + '%';
        }

        function updateNavigation() {
            const navItems = document.querySelectorAll('.nav-item');
            navItems.forEach((item, index) => {
                item.classList.toggle('active', index === currentSlide);
            });
        }

        // Product selection
        function selectProduct(productName, price) {
            document.getElementById('product').value = productName;
            updateTotalPrice();
            goToSlide(4); // Go to order slide
        }

        // Update total price
        function updateTotalPrice() {
            const productSelect = document.getElementById('product');
            const quantityInput = document.getElementById('quantity');
            const totalPriceElement = document.getElementById('totalPrice');
            
            const selectedProduct = productSelect.value;
            const quantity = parseInt(quantityInput.value) || 1;
            
            if (selectedProduct && productPrices[selectedProduct]) {
                const total = productPrices[selectedProduct] * quantity;
                totalPriceElement.textContent = 'Rp ' + total.toLocaleString('id-ID');
            } else {
                totalPriceElement.textContent = 'Rp 0';
            }
        }

        // Handle order submission
        function handleOrderSubmit(e) {
            e.preventDefault();
            
            const submitText = document.getElementById('submitText');
            const originalText = submitText.textContent;
            
            // Show loading
            submitText.textContent = '⏳ Mengirim...';
            
            // Simulate order processing
            setTimeout(() => {
                alert('🎉 Pesanan berhasil dikirim! Tim kami akan menghubungi Anda segera.');
                submitText.textContent = originalText;
                
                // Reset form
                document.getElementById('orderForm').reset();
                updateTotalPrice();
                
                // Go to contact slide
                goToSlide(5);
            }, 2000);
        }

        // Add smooth scrolling and animations
        function addScrollAnimations() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            });

            document.querySelectorAll('.animate-fade-in-up, .animate-slide-in-left, .animate-slide-in-right').forEach(el => {
                observer.observe(el);
            });
        }

        // Initialize animations
        addScrollAnimations();
    </script>
